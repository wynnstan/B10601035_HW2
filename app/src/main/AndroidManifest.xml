<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.B10601035_HW2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.B10601035_HW2.addGuestActivity"
            android:label="@string/action_add_guest"
            android:parentActivityName="com.example.B10601035_HW2.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.B10601035_HW2.MainActivity" />
        </activity>

        <activity
            android:name="com.example.B10601035_HW2.settingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="com.example.B10601035_HW2.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.B10601035_HW2.MainActivity" />
        </activity>

        <activity android:name="com.example.B10601035_HW2.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>